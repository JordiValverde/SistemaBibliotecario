@page
@model JLCS.SB.Sistema_de_Informacion_Bibliotecario.Pages.PrestamoLibros.DetallePrestamoModel
@{
    ViewData["Title"] = "DetallePrestamo";
}
<br />
<h1>GAAA</h1>
<body>
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="border">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Usuario.IdUsuario" />
                            <div class="container" style="padding:30px;">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <label asp-for="Usuario.Nombre"></label>
                                        </div>
                                        <div class="col-sm-4">
                                            <input asp-for="Usuario.Nombre" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <label asp-for="Prestamo.FechaFinPrestamo"></label>
                                        </div>
                                        <div class="col-sm-4">
                                            <input asp-for="Prestamo.FechaFinPrestamo" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Prestamo.FechaFinPrestamo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-2 offset-sm-2">
                                            <input asp-for="Prestamo.IdUsuario" value="@Model.Usuario.IdUsuario" class="hide"/>
                                            <input type="submit" value="Guardar Fecha Devolucion" class="btn btn-primary form-control" />
                                        </div>
                                        <div class="col-sm-2">
                                            <a asp-page="ConsultarPrestamo" class="btn btn-success form-control">Volver a Consultar Prestamo</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
